<Window x:Class="nmct.ba.cashlessproject.ui.management.View.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:nmct.ba.cashlessproject.ui.management.ViewModel"
        Title="Management App" Height="520" Width="780">
    <Window.DataContext>
        <vm:LoginVM />
    </Window.DataContext>
    <Grid>
        <StackPanel>
            <TextBlock Text="Login:" Margin="4"/>
            <TextBox Text="{Binding Username}" Margin="8"/>
            <TextBlock Text="Password:" Margin="4"/>
            <!-- replace with password box and "break" the MVVM pattern: http://stackoverflow.com/questions/1483892/how-to-bind-to-a-passwordbox-in-mvvm-->
            <PasswordBox Name="txtPassword" Margin="8"/>
            <Button Content="Aanmelden" Command="{Binding LoginCommand}" CommandParameter="{Binding ElementName=txtPassword}" Margin="8"/>
            <TextBlock Foreground="Red" Text="{Binding Error}"/>
        </StackPanel>
    </Grid>
</Window>
